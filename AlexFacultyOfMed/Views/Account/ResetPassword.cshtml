@model AlexFacultyOfMed.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "أستعادة كلمة المرور";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new
{ @class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    <hr/>
    <div class="col-sm-6 col-sm-offset-3">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="form-group">

            <div class="col-md-8 col-sm-12">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "البريد الألكترونى" })
            </div>
            @Html.LabelFor(m => m.Email, new {@class = "col-sm-4 control-label hidden-xs hidden-sm" })
        </div>
        <div class="form-group">

            <div class="col-md-8 col-sm-12">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control" ,placeholder="كلمة السر"})
            </div>
            @Html.LabelFor(m => m.Password, new {@class = "col-sm-4 control-label hidden-xs hidden-sm" })
        </div>
        <div class="form-group">

            <div class="col-md-8 col-sm-12">
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "تأكيد كلمة السر" })
            </div>
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-sm-4 control-label hidden-xs hidden-sm " })
        </div>
        <div class="form-group ">
            <div class="text-center">
                <input type="submit" class="btn btn-success" value="حفظ" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}