@model   List<AlexFacultyOfMed.Controllers.DataInfo>
@{
    ViewBag.Title = "FileData";
}

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading ">
            بيانات المدفوعة  
        </div>
        <div class="panel-body">
            @foreach (var item in @Model)
            {
                if (item.AccountId.StartsWith("3") && item.AccountId!= "3003" &&item.AccountId!= "3001" && !string.IsNullOrEmpty(item.AccountValue))
                {
                    <div class="col-xs-4">
                        @item.AccountName
                        @item.AccountValue
                    </div>
                }


            }
        </div>

    </div>
    
    <div class="col-xs-6 well">
        الأستقطاع
        
        <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th class="text-right">
                    البند
                </th>
                <th class="text-right">
                    المبلغ
                </th>
            </tr>

            </thead>
            <tbody>

                @foreach (var item in @Model)
                {
                    if (item.AccountId.StartsWith("2") && !string.IsNullOrEmpty(item.AccountValue))
                    {
                        <tr>
                            <td>@item.AccountName</td>
                       
                            <td>@item.AccountValue</td>
                        </tr>
                    }
                    if (item.AccountId == "3222")
                    {

                        {
                            <tr  class="text-danger">
                                <td>@item.AccountName</td>

                                <td>@item.AccountValue</td>
                            </tr>
                        }
                    }

                }


            </tbody>

        </table>

    </div>
    <div class="col-xs-6 well">
        الأستحقاق
        <table  class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th class="text-right">
                        البند
                    </th>
                    <th class="text-right">
                        المبلغ
                    </th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in @Model)
                {
                    if (item.AccountId.StartsWith("1") && !string.IsNullOrEmpty(item.AccountValue))
                    {
                        <tr>
                            <td>@item.AccountName</td>

                            <td>@item.AccountValue</td>
                        </tr>
                    }
                    if (item.AccountId == "3111")
                    {

                        {
                            <tr class="text-danger">
                                <td>@item.AccountName</td>

                                <td>@item.AccountValue</td>
                            </tr>
                        }
                    }

                }


            </tbody>

        </table>

    </div>

</div>