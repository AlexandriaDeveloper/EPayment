@model AlexFacultyOfMed.Models.SetPasswordViewModel
@{
    ViewBag.Title = "كلمة السر الجديدة";
}

<h2>@ViewBag.Title.</h2>
<p class="text-info">

</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()


    <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group">

        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control", placeholder = "كلمة السر الجديدة", autocomplete = "off"})
        </div>
        @Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label visible-md visible-lg"})
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "تأكيد كلمة السر الحالية", autocomplete = "off"})
        </div>
        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label visible-md visible-lg"})
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="أدخل كلمة السر" class="btn btn-primary col-md-offset-3"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}