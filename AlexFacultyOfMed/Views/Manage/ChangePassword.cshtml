@model AlexFacultyOfMed.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "تغيير كلمة السر";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group">

        <div class="col-xs-10">
            @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control", placeholder = "كلمة السر الحالية"})
        </div>
        @Html.LabelFor(m => m.OldPassword, new {@class = "col-md-2 control-label visible-md visible-lg"})
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control", placeholder = "كلمة السر الجديدة"})
        </div>
        @Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label visible-md visible-lg"})
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control ", placeholder = " تأكيد كلمة السر الجديدة"})
        </div>
        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label visible-md visible-lg"})
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="تغيير كلمة السر" class="btn btn-primary col-md-offset-3"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}