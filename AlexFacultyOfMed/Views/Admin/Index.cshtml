@model AlexFacultyOfMed.ViewModel.AdminVM.IndexVm
@{
    ViewBag.Title = "صفحة أدارة المستخدمين";
}


<h1>
    <i class="fa fa-address-book"></i>

    تعديل بيانات المستخدمين
</h1>
<div class="row">

    <div class="col-sm-3"></div>
    <div class="col-sm-6 well">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "Admin", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()

                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="form-group">
                    <div class="col-md-8 ">
                        @Html.TextBoxFor(m => m.NationalId, new {@class = "form-control ", placeholder = "أدخل الرقم القومى ....."})
                        @Html.ValidationMessageFor(m => m.NationalId, "", new {@class = "text-danger"})
                    </div>
                    @Html.LabelFor(m => m.NationalId, new {@class = "col-md-4 control-label visible-md visible-lg"})

                </div>


                <div class="form-group ">
                    <div class="center-block col-sm-6">
                        <input type="submit" value="تعديل" class="btn btn-primary"/>
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-xs-3"></div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}